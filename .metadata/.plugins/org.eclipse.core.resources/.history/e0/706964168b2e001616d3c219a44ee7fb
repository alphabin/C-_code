	}


void Employee::addDate(int a,int b,int c){
	Date temp(a,b,c);
	hiredate=temp;

	}

void Employee::getDate(){

	hiredate.printDate();

	}



void Employee::print(){
	cout << "NAME\t\t"<<"EmployeeID\t" <<"Phone\t\t" <<"Age\t" <<"Gender\t"<<"JobTitle\t"<<"Salary\t "<<"HireDate\t"<<endl;

    getName();
