    getId();
    cout<<"\t\t";
    getPhone();
    cout<<"\t";
    getAge();
    cout<<"\t";
    getGender();
    cout<<"\t";
    getTitle();
    cout<<"\t";
    getSalary();
    cout<<"\t";
    getDate();


