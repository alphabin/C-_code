bool Employee::operator==(Employee b){
	 if (getPhone()==b.getPhone())
		 return true;
	 else
		 return false;

}

void Employee::operator+(int a){
	     int temp=a;
	     int temp1=getAge();
	     addAge(temp+temp1);
	     cout<<endl<<"Added "<<a<<" to Age "<<endl;
}

