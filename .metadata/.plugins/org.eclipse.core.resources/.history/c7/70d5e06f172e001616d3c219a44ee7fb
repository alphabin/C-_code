	 hiredate=nhireday;

}


void Employee::print(){
	cout << "NAME          "<<"EmployeeID    " <<"Phone " <<"Age " <<"Gender "<<"Job Title "<<"Salary "<<"Hire Date"<<endl;
    cout << name <<"	 "<< empID<<"	 "<<phoneNum<<" "<< age<<" " <<gender<<" "<<jTitle<<" "<<salary ;
    hiredate.printDate();
    cout<<endl;


}

